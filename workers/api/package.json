{
  "name": "vibecodr-api",
  "private": true,
  "version": "0.0.0",
  "scripts": {
    "wrangler": "wrangler",
    "dev": "wrangler dev",
    "dev:api": "wrangler dev --config wrangler.toml --assets assets",
    "deploy": "wrangler deploy",
    "build": "tsc",
    "typecheck": "tsc --noEmit",
    "db:generate": "drizzle-kit generate",
    "db:push": "drizzle-kit push",
    "db:studio": "drizzle-kit studio",
    "db:migrate": "wrangler d1 execute vibecodr-d1 --file=./drizzle/migrations/*.sql",
    "d1:apply:remote": "wrangler d1 execute vibecodr-d1 --remote --file ./src/schema.sql",
    "d1:apply:local": "wrangler d1 execute vibecodr-d1 --local --file ./src/schema.sql",
    "d1:apply": "pnpm run d1:apply:remote && pnpm run d1:apply:local",
    "d1:seed:local": "wrangler d1 execute vibecodr-d1 --local --file ./src/seed-dev.sql",
    "d1:seed:remote": "wrangler d1 execute vibecodr-d1 --remote --file ./src/seed-dev.sql",
    "d1:seed": "pnpm run d1:seed:local && pnpm run d1:seed:remote",
    "test": "vitest run",
    "test:unit": "vitest run",
    "test:watch": "vitest"
  },
  "dependencies": {
    "drizzle-orm": "^0.33.0",
    "zod": "^3.23.0",
    "@vibecodr/shared": "workspace:*",
    "esbuild-wasm": "^0.24.0",
    "jszip": "^3.10.1"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20241127.0",
    "drizzle-kit": "^0.24.0",
    "typescript": "^5.4.5",
    "vitest": "^2.0.0",
    "@types/node": "^20.0.0",
    "esbuild": "^0.25.12",
    "wrangler": "^4.47.0"
  }
}
