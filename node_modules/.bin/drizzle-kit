#!/bin/sh
basedir=$(dirname "$(echo "$0" | sed -e 's,\\,/,g')")

case `uname` in
    *CYGWIN*) basedir=`cygpath -w "$basedir"`;;
esac

if [ -z "$NODE_PATH" ]; then
  export NODE_PATH="/mnt/c/Users/brade/Desktop/vibecodr/node_modules/drizzle-kit/node_modules:/mnt/c/Users/brade/Desktop/vibecodr/node_modules:/mnt/c/Users/brade/Desktop/node_modules:/mnt/c/Users/brade/node_modules:/mnt/c/Users/node_modules:/mnt/c/node_modules:/mnt/c/Users/brade/Desktop/vibecodr/node_modules/.pnpm/node_modules"
else
  export NODE_PATH="/mnt/c/Users/brade/Desktop/vibecodr/node_modules/drizzle-kit/node_modules:/mnt/c/Users/brade/Desktop/vibecodr/node_modules:/mnt/c/Users/brade/Desktop/node_modules:/mnt/c/Users/brade/node_modules:/mnt/c/Users/node_modules:/mnt/c/node_modules:/mnt/c/Users/brade/Desktop/vibecodr/node_modules/.pnpm/node_modules:$NODE_PATH"
fi
if [ -x "$basedir/node" ]; then
  exec "$basedir/node"  "$basedir/../drizzle-kit/bin.cjs" "$@"
else
  exec node  "$basedir/../drizzle-kit/bin.cjs" "$@"
fi
